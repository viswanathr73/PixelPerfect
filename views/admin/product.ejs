<%- include('header') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products</h2>
                  
                </div>
                <div>
                    
                    <a href="/admin/addProduct" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                       
                       
                        
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-4">

                        <% if (product.length > 0) { %>
                           <% for (let i = 0; i < product.length; i++) { %>
                            <div class="col">
                                <div class="card card-product-grid">
                                    <a href="#" class="img-wrap"> <img style="height: 150px;" src="/admin/assets/imgs/category/<%= product[i].images[0] %>" alt="Product"> </a>
                                    <div class="info-wrap">
                                        <a href="#" class="title text-truncate"><%= product[i].title %></a>
                                        <div class="price mb-2">$<%= product[i].price %></div> <!-- price.// -->
                                        <a href="/admin/editProduct?id=<%= product[i]._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                            <i class="material-icons md-edit"></i> Edit
                                        </a>
                                        <a href="/admin/deleteProduct?id=<%= product[i]._id %>" class="btn btn-sm font-sm btn-light rounded">
                                            <i class="material-icons md-delete_forever"></i> Delete
                                        </a>
                                        <% if (product[i].status==true) { %>
                                           
                                            <td><span><a class="badge rounded-pill alert-danger" href="/admin/unlistProduct?id=<%= product[i]._id %>">Unlist</a></span> </td>
                                            
                                            <% } else { %>
                                                <a class="badge rounded-pill alert-success" href="/admin/listProduct?id=<%= product[i]._id %>">list</a></td>
                                                <% } %>


                                                



                                    </div>
                                </div> <!-- card-product  end// -->
                            </div> <!-- col.// -->


                                <% } %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="2">Product not found</td>
                                    </tr>
                                    <% } %>

                        
                       
                        
                       
                    </div> <!-- row.// -->
                    <div>
                        <% if (page > 1) { %>
                            <a href="/admin/product?page=<%= page - 1 %>">Previous</a>
                        <% } %>
                        <span>Page <%= page %> of <%= totalPages %></span>
                        <% if (page < totalPages) { %>
                            <a href="/admin/product?page=<%= page + 1 %>">Next</a>
                        <% } %>
                    </div>
                </div> <!-- card-body end// -->
                
            </div> <!-- card end// -->
                   
        </section> <!-- content-main end// -->
        
        <%- include('footer') %>