                                                        class="btn btn-md rounded font-sm">Return</a>
                                                    <% } else if(order.status=='returned' ){ %>

                                                        <% } %>


                                                            <!-- Return Reason Modal -->
                                                            <div class="modal fade" id="returnModal" tabindex="-1"
                                                                aria-labelledby="returnModalLabel" aria-hidden="true">
                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title"
                                                                                id="returnModalLabel">Return Reason
                                                                                details</h5>
                                                                            <button type="button" class="close"
                                                                                data-dismiss="modal" aria-label="Close">
                                                                                <span aria-hidden="true">&times;</span>
                                                                            </button>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            <form id="returnReasonForm">
                                                                                <textarea id="returnReason"
                                                                                    class="form-control"
                                                                                    placeholder="Write your Explain return reason here..."></textarea>
                                                                            </form>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button"
                                                                                class="btn btn-secondary"
                                                                                data-dismiss="modal">Close</button>
                                                                            <button type="button"
                                                                                class="btn btn-primary"
                                                                                onclick="submitReturnReason('<%=order._id%>')">Submit</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                            </div>


                        </div>
                </div>
