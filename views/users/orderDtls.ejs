    <script>
        function submitReturnReason(orderId) {
            // alert(orderId);
            const returnReason = document.getElementById('returnReason').value;

            // Use jQuery's AJAX function
            $.ajax({
                url: '/return',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ returnReason, orderId: orderId }),
                success: function (res) {
                    if (res.status) {
                        location.reload()
                    }
                    // You can perform additional actions if needed
                },
                error: function (error) {
                    console.error('Error submitting return reason', error);
                }
            });

            // Close the modal after submitting the return reason
            $('#returnModal').modal('hide');
        }
    </script>


    <script>
        function conformCansel(id, orderId) {
            swal({
                title: "Are you sure?",
                text: "Once Cansel, you will not be able to recover this Product!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        swal("Poof! Your imaginary file has been deleted!", {
                            icon: "success",
                        });
                        location.href = `/cancelOrder?id=${id}&orderId=${orderId}`
                    } else {
                        Swal.fire({
                            title: "Cansel Success",

                            icon: "error",
                            timer: 1000,
                            showConfirmButton: false, // This removes the button
                        });
                    }
                });

        }



    </script>















